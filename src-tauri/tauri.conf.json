{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "AniTrack",
	"version": "1.0.0",
	"identifier": "com.anitrack.app",
	"build": {
		"beforeDevCommand": "yarn dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "yarn build",
		"frontendDist": "../dist"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "AniTrack",
				"width": 1280,
				"height": 800,
				"minWidth": 940,
				"minHeight": 600,
				"resizable": true,
				"fullscreen": false,
				"center": true
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	},
	"plugins": {
		"shell": {
			"open": true
		}
	}
}
